{
  "name": "mbti-test",
  "version": "1.0.0",
  "description": "专业MBTI性格测试网页 - 基于荣格心理学理论",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "test": "node execute-tests.js",
    "test:manual": "echo '请在浏览器控制台中运行手动测试脚本'",
    "test:auto": "node automated-manual-test.js",
    "test:browser": "echo '请在浏览器中加载 browser-test-runner.js'",
    "test:all": "npm run test && npm run test:auto"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@vueuse/core": "^10.7.0",
    "better-sqlite3": "^12.2.0",
    "mysql2": "^3.14.3",
    "pinia": "^2.1.0",
    "sqlite3": "^5.1.7",
    "typescript": "~5.3.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/tsconfig": "^0.5.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "puppeteer": "^21.0.0",
    "tailwindcss": "^3.4.0",
    "terser": "^5.43.1",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.0"
  }
}
